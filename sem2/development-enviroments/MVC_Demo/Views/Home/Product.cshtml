

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";


    var cultures = ViewBag.LanguagesList as System.Globalization.CultureInfo[];
    var listItems = cultures.Select(c => new SelectListItem() { Text = c.EnglishName });

}

<h2>Product</h2>

<ul>
    @foreach (var languages in ViewBag.LanguageList)
    {
        <li>@languages.EnglishName</li>
    }
</ul>

<hr />

<h2>Languages</h2>
<div class="row">
    <div class="col-xs-6">
        @Html.ListBox("lang", listItems)
    </div>
    <div class="col-xs-6">
        @Html.DropDownList("lang2", listItems)
    </div>
</div>